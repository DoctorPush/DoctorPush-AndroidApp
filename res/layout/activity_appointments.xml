<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent">

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:fontFamily="sans-serif-light"
			android:textAlignment="center"
			android:id="@+id/chronometer" android:layout_gravity="center" android:textSize="90dp"
			android:text="00:00" android:layout_marginTop="14dp"/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="There are 0 persons waiting before you "
			android:fontFamily="sans-serif-light"
			android:id="@+id/personsTextView" android:layout_gravity="center" android:textSize="17dp"
			android:layout_marginBottom="12dp" android:layout_marginTop="12dp"/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/your_appointments"
			android:id="@+id/yourAppointmentsTextView"
			android:layout_marginBottom="12dp" android:layout_marginTop="12dp" android:textSize="16dp"
			android:textColor="#bbbbbb" android:layout_gravity="left" android:layout_marginLeft="16dp"/>

	<ListView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/appointmentListView"/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/old_appointments"
			android:id="@+id/oldAppointmentsTextView"
			android:layout_marginBottom="12dp" android:layout_marginTop="12dp"
			android:textSize="16dp" android:textColor="#bbbbbb" android:layout_marginLeft="16dp"/>

	<ListView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/oldAppointmentsListView" android:layout_gravity="center"/>
</LinearLayout>